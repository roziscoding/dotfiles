# launch picom
exec_always --no-startup-id picom

# launch polybar
# exec_always --no-startup-id ~/.config/polybar/launch.sh

# clipboard management
exec_always --no-startup-id greenclip daemon

# wallpaper
exec_always --no-startup-id ~/.config/i3/bg.sh

# automatic screen lock
exec_always --no-startup-id xautolock -time 10 -locker "i3lock-fancy-rapid 10 30"

# launch 1password
exec_always --no-startup-id 1password

# set monitor layout
exec_always --no-startup-id ~/.screenlayout/default.sh
