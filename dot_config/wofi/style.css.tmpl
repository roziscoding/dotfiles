@import "{{- .chezmoi.homeDir -}}/.cache/wal/colors-wofi.css";

#entry {
    padding: 5px 2px 5px 2px;
    margin: 0px 4px 0px 4px;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

#entry:selected {
    color: @foreground;
    background-color: @background;
    /* background-color: rgba (120, 120, 120, 0.3); */
    padding: 7px;
    border-radius: 0;
}

#text:selected {
    color: @color14;
}

#window {
    /* animation-name: fadeIn; */
    /* animation-duration: 0.2s; */
    background-color: transparent;
    border-radius: 0;
    font-family: Jetbrains Mono NerdFont;
    /* font-size:14; */
}

#input {
    border: 1px solid @color14;
    background-color: @background;
    border-radius: 0;
    margin: 4px 4px 8px 4px;
    padding: 8px;
    font-family: 'Jetbrains Mono NerdFont';
}

#inner-box {
    color: rgba (255, 0, 0, 0.3);
    font-family: 'Jetbrains Mono NerdFont';
    border-radius: 0;
    font-weight: 600;
}

#outer-box {
    background-color: rgba(0, 0, 0, 0.8);
    border: 1px solid @color6;
    padding: 7px;
    border-radius: 5px;
    font-family: 'Jetbrains Mono NerdFont';
    box-shadow: 0px 0px 2px 1px @color6;
    margin: 5px;
}

#text {
    color: @foreground;
    background-color: transparent;
}

#img {
    background-color: transparent;
    margin-right: 10px;
}
