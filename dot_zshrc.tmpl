# Aliases
function cz () {
  code $(z -e $1)
}

function cfz () {
  code $(fzf)
}

function mkd () {
  mkdir -p $1 && cd $1
}

function ghc () {
  OWNER=$(basename $(pwd))
  op plugin run -- gh repo clone $OWNER/$1
}

function secrets () {
  eval "$(op inject -i ~/.envs.sh)"
}

function wreboot () {
        sudo efibootmgr -n 0
        sudo reboot
}

function rd () {
    echo -n "Deleting $@. Continue? [y/n] "
    read REPLY
    case $REPLY in
      [Yy]) rm -rf $@ ;;
    esac
}

function yy () {
 local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" 
 yazi "$@" --cwd-file="$tmp"
 if cwd="$(cat -- "$tmp")"  && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]
 then
  cd -- "$cwd" || return
 fi
 rm -f -- "$tmp"
}


